# Exemple de fichier d'environnement pour MonProjet Django Blog

SECRET_KEY=changeme-en-production
DEBUG=False
ALLOWED_HOSTS=monblog.com,www.monblog.com,localhost,127.0.0.1

# Base de données PostgreSQL
DB_NAME=monprojetdb
DB_USER=monprojetuser
DB_PASSWORD=motdepassefort
DB_HOST=db
DB_PORT=5432

# Chemins statiques et médias
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Email (optionnel)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Autres variables de sécurité
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
